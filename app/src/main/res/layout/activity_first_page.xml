<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_color">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="1280dp"
        android:layout_height="000dp"
        android:background="@drawable/first_page_back_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <View
            android:layout_width="1280dp"
            android:layout_height="96dp"
            android:background="@drawable/ic_bg_topbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="117dp"
            android:layout_height="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="752dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="수술실 명칭"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|top"
            android:layout_marginTop="19.2dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/ic_btn_setting_w"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_select_product"
            android:layout_width="433.2dp"
            android:layout_height="550dp"
            android:layout_marginLeft="201.2dp"
            android:layout_marginTop="151.2dp"
            android:background="@drawable/select_product"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_select_product"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="453.2dp"
            android:layout_height="84dp"
            android:layout_marginBottom="89dp"
            android:background="@drawable/shadow_view"
            android:drawableLeft="@drawable/ic_gp_select_product"
            android:fontFamily="sans-serif"
            android:gravity="right|center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="ABC12300"
            android:textColor="#000000"
            android:textSize="24dp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/view_select_product"
            app:layout_constraintStart_toStartOf="@+id/view_select_product" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="67.2dp"
            android:layout_marginTop="10dp"
            android:text="1"
            android:textColor="#5A67E7"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/view_select_product"
            app:layout_constraintStart_toStartOf="@+id/btn_select_product"
            app:layout_constraintTop_toTopOf="@+id/btn_select_product" />

        <ImageView
            android:layout_width="324dp"
            android:layout_height="244dp"
            android:layout_marginStart="41dp"
            android:layout_marginLeft="41.2dp"
            android:layout_marginTop="94dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            android:src="@drawable/gp_product"
            app:layout_constraintEnd_toEndOf="@+id/view_select_product"
            app:layout_constraintStart_toStartOf="@+id/view_select_product"
            app:layout_constraintTop_toTopOf="@+id/view_select_product" />

        <TextView
            android:layout_width="66dp"
            android:layout_height="21dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/tag_available"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="사용 가능"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/view_select_product"
            app:layout_constraintTop_toTopOf="@+id/view_select_product" />

        <View
            android:layout_width="1280dp"
            android:layout_height="96dp"
            android:background="@drawable/ic_bg_topbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="117dp"
            android:layout_height="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="752dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="수술실 명칭"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|top"
            android:layout_marginTop="19.2dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/ic_btn_setting_w"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_select_product2"
            android:layout_width="433.2dp"
            android:layout_height="550dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="151.2dp"
            android:background="@drawable/select_product"
            app:layout_constraintStart_toEndOf="@+id/view_select_product"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_select_product2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="452.2dp"
            android:layout_height="84dp"
            android:layout_marginBottom="89dp"
            android:background="@drawable/shadow_view"
            android:drawableLeft="@drawable/ic_gp_select_product"
            android:fontFamily="sans-serif"
            android:gravity="right|center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="ABC12300"
            android:textColor="#000000"
            android:textSize="24dp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/view_select_product2"
            app:layout_constraintStart_toStartOf="@+id/view_select_product2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="67.2dp"
            android:layout_marginTop="10dp"
            android:text="2"
            android:textColor="#5A67E7"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/view_select_product2"
            app:layout_constraintStart_toStartOf="@+id/btn_select_product2"
            app:layout_constraintTop_toTopOf="@+id/btn_select_product2" />

        <ImageView
            android:layout_width="324dp"
            android:layout_height="244dp"
            android:layout_marginStart="41dp"
            android:layout_marginLeft="41.2dp"
            android:layout_marginTop="94dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            android:src="@drawable/gp_product"
            app:layout_constraintEnd_toEndOf="@+id/view_select_product2"
            app:layout_constraintStart_toStartOf="@+id/view_select_product2"
            app:layout_constraintTop_toTopOf="@+id/view_select_product2" />

        <TextView
            android:layout_width="66dp"
            android:layout_height="21dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/tag_available"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="사용 가능"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/view_select_product2"
            app:layout_constraintTop_toTopOf="@+id/view_select_product2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="95.2dp"
        android:layout_height="19.2dp"
        android:src="@drawable/gp_logo"
        android:layout_marginBottom="15.6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>